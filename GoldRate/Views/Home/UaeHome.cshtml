                            </div>
                            <input type="number" name="GoldValue" class="form-control text-black bg-white font-weight-bold" id="GoldValue" placeholder="000.000" v-model="GoldPrice18" readonly>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var vueApp = new Vue({
        el: '#app',
        data: {
            GoldWeight: 1
            @*GoldPrice24: @Html.DisplayFor(m=> m.GoldPrice24),
            GoldPrice22: @Html.DisplayFor(m=> m.GoldPrice22),
            GoldPrice21: @Html.DisplayFor(m=> m.GoldPrice21),
            GoldPrice18: @Html.DisplayFor(m=> m.GoldPrice18)*@
        },
        computed: {
            GoldPrice24:  function () {
                return this.GoldWeight * @Html.DisplayFor(m=> m.GoldPrice24);
            },
            GoldPrice22: function () {
                return this.GoldWeight * @Html.DisplayFor(m=> m.GoldPrice22);
            },
            GoldPrice21: function () {
                return this.GoldWeight * @Html.DisplayFor(m=> m.GoldPrice21);
            },
            GoldPrice18: function () {
                return this.GoldWeight * @Html.DisplayFor(m=> m.GoldPrice18);
            }
        }

    });
</script>

