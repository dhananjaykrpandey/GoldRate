@using Microsoft.AspNetCore.Components
@model GoldRate.Models.mUaeHome

@{
    ViewData["Title"] = "UAE Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="mt-5">UAE Gold Rates (AED)</h1>
<p class="lead">Update On [ UAE Time <code>@DateTime.Now.ToLongDateString() @DateTime.Now.ToLongTimeString()  </code>] [ UTC Time <code>  @DateTime.UtcNow]</code>.</p>
<p>Source: Dubai Gold & Jewelery Group.</p>
<div class="row">
    <div class="col-xl-2 col-md-6">
        <div class="card bg-primary text-white mb-4">
            <div class="card-body">OUNCE</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                AED    @Html.DisplayFor(model => model.GoldPriceOz)<span></span>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6">
        <div class="card bg-danger     text-white mb-4">
            <div class="card-body">24 Carat</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                AED    @Html.DisplayFor(model => model.GoldPrice24) <span>(g)</span>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">22 Carat</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                AED    @Html.DisplayFor(model => model.GoldPrice22)<span>(g)</span>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6">
        <div class="card bg-info text-white mb-4">
            <div class="card-body">21 Carat</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                AED    @Html.DisplayFor(model => model.GoldPrice21)<span>(g)</span>
            </div>
        </div>
    </div>
    <div class="col-xl-2 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">18 Carat</div>
            <div class="card-footer d-flex align-items-center justify-content-between">
                AED    @Html.DisplayFor(model => model.GoldPrice18)<span>(g)</span>
            </div>
        </div>
    </div>
</div>
<hr />
